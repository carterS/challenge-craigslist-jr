<div class="items_posted">
  <h3><%=@item.title%></h3>
  <ul>
    <li>Price: <%=@item.price%></li>
    <li>Description: <%=@item.description%></li>
  </ul>
  <br/>
  <% if @user.id == @item.user_id %>
    <a href="/posts/<%= @item.id %>/<%= @item.edit_url %>">Edit Post</a>
    <br/><br/>
  <%end%>
  <a href="/">Home</a>
</div>
